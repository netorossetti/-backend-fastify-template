{
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "node16",
    "target": "es2022",

    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",

    "paths": {
      "src/*": ["./src/*"],
      "test/*": ["./test/*"],
      "prisma/*": ["./prisma/*"],
      "@core/*": ["./src/core/*"],
      "@domain/*": ["./src/domain/*"],
      "@infra/*": ["./src/infra/*"]
    },

    "types": ["vitest/globals"]
  },

  "include": ["src", "test"]
}
